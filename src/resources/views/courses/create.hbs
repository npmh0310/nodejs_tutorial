<div class="mt-4">
  <h3>Đăng khóa học</h3>
  <form method="POST" action="/courses/store">
    <div class="form-group">
      <label for="nameInput">Input name</label>
      <input
        type="text"
        class="form-control"
        id="name"
        name="name"
        placeholder="Enter name"
      />
    </div>
    <div class="form-group">
      <label for="descriptionInput">Mô tả</label>
      <input
        class="form-control"
        id="description"
        name="description"
        placeholder="Nhập mô tả"
        rows="3"
      />
    </div>


    <div class="form-group">
      <label for="videoIdInput">ID Video</label>
      <input
        type="text"
        class="form-control"
        id="videoId"
        name="videoId"
        placeholder="Nhập ID Video"
      />
    </div>

    <button type="submit" class="btn btn-primary">Them khoa hoc</button>
  </form>
</div>